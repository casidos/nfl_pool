%section.content-header
  %h1 Summary

%section.content
  .row
    .col-md-10.col-md-offset-1
      .box
        .box-header.with-border
          %h2.box-title Standings
        .box-body.no-padding
          %table.table.table-hover.table-striped
            %thead
              %tr
                %th Player
                %th.text-center Correct Picks
                %th.text-center Weeks Tied
                %th.text-center Weeks Won
                %th.text-center Winnings
            %tbody
              - User.order(:name).all.each do |user|
                %tr
                  %td= user.name
                  %td.text-center= user.pretty_correct_picks
                  %td.text-center
                  %td.text-center
                  %td.text-right
  .row
    .col-md-10.col-md-offset-1
      .box
        .box-header.with-border
          %h2.box-title Winnings by Week
        .box-body.table-responsive.no-padding
          %table.table.table-hover.table-striped
            %thead
              %tr
                %th.text-center Week
                %th.text-center Games
                %th.text-center Betting Tier
                %th.text-center Pot
                %th Winner
            %tbody
              - @weeks.each do |week|
                %tr
                  %td.text-center
                    = week.week
                  %td.text-center
                    = week.games_dataset.followed.count
                  %td.text-center
                    = week.betting_tier
                  %td.text-center
                    - if week.pot
                      = '$%d' % week.pot
                  %td
